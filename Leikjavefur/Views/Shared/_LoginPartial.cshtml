@if (Request.IsAuthenticated)
{
    @*<p id="logGreeting">*@
    <ul>
        @*<li>@Html.ActionLink(User.Identity.Name, "Manage", "Account", routeValues: null, htmlAttributes: new { @class = "actionLink", id="username", title = "Manage" })</li>*@
        <li>@Html.ActionLink("Breyta lykilorði", "Manage", "Account")</li>
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
        {
            @Html.AntiForgeryToken()
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Útskrá</a></li>
        }
    </ul>
} else {
    <ul>
        <li>@Html.ActionLink("Nýskrá", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Innskrá", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}

@if (User.IsInRole("Administrator"))
{
    <ul>
        <li>@Html.ActionLink("Admin: Notendur", "Index", "Users")</li>
        <li>@Html.ActionLink("Admin: Leikir", "Index", "Games")</li>
    </ul>
}

