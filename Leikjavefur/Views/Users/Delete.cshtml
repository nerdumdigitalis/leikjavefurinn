@model Leikjavefur.Models.UserProfile

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>UserProfile</legend>

    <div class="display-label">UserProfileName</div>
    <div class="display-field">@Model.UserName</div>

    <div class="display-label">Email</div>
    <div class="display-field">@Model.Email</div>

    <div class="display-label">Avatar</div>
    <div class="display-field">@Model.Avatar</div>

    <div class="display-label">DateCreated</div>
    <div class="display-field">@String.Format("{0:g}", @Model.DateCreated)</div>

    <div class="display-label">About</div>
    <div class="display-field">@Model.About</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


