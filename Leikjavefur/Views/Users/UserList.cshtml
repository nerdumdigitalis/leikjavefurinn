@model IQueryable<Leikjavefur.Models.UserProfile>

@{
    Layout = null;
}

<ul class="popup">
    @foreach (var item in Model) 
    {
        @*@Html.DisplayFor(modelItem => item.UserName)*@
        <li>
            @Html.ActionLink(item.UserName, "Details", new { id=item.UserID })
            <div>
                <div id="dialog-form" title="Create new user">
                    <p class="validateTips">All form fields are required.</p>
                    <form>
                        <fieldset>
                            <legend>@item.UserName</legend>
                            @item.About
                            <br />
                            @if (Request.IsAuthenticated) 
                            {
                                @*@Html.ActionLink("Vingast Við", "AddFriend", new { id=item.UserID })*@
                                <input type="button" value="Vingast við" onclick="location.href='@Url.Action("AddFriend", "Users", new { id=item.UserID })'" />
                            }
                        </fieldset>
                    </form>
                </div>
            </div>
        </li>
    }
</ul>