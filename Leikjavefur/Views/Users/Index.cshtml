@using System.Web.Security;

@model IEnumerable<Leikjavefur.Models.UserProfile>

@{
    ViewBag.Title = "Index";
}

<h2>Listi yfir notendur</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Username
        </th>
        <th>
            Email
        </th>
        <th>
            DateCreated
        </th>
@*        <th>
            About
        </th>*@
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if (Roles.IsUserInRole(item.UserName, "Disabled"))
            {   @Html.ActionLink("Enable", "ToggleDisable", "Users", new { name=item.UserName }, null) }
            else
            {   @Html.ActionLink("Disable",  "ToggleDisable", "Users", new { name=item.UserName }, null) }
            |
            @Html.ActionLink("Edit", "Edit", new { id=item.UserID }) |
            @Html.ActionLink("Details", "Details", new { id=item.UserID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.UserID })
        </td>
        <td>
			@item.UserName
        </td>
        <td>
			@item.Email
        </td>
        <td>
			@String.Format("{0:g}", item.DateCreated)
        </td>
@*        <td>
			@item.About
        </td>*@
    </tr>
}

</table>


